<div id="admin_comment_type_form_fields " data-hook>
  <%= f.field_container :name do %>
    <%= f.label :name, Spree.t(:name) %><br />
    <%= f.text_field :name, :class => 'form-control title' %>
    <%= error_message_on :comment_type, :name %>
  <% end %>

  <%= f.hidden_field :applies_to, :value => f.object.nil? ? 'Order' : f.object.applies_to, :class => 'form-control title' %>

</div>

