<% content_for :page_title do %>
  <%= page_header_back_button admin_comment_types_path %>
  <%= Spree.t(:editing_comment_type, comment_type: @comment_type.name) %>
  <%= render 'spree/admin/shared/error_messages', :target => @comment_type %>
<% end %>

<div id="admin_comment_type_edit_form" data-hook>
  <%= form_for(@comment_type, :url => object_url, :html => { :method => :put }) do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <br>
    <% destroy_url = defined?(destroy_url) && destroy_url ? destroy_url : object_url(f.object) %>

    <div class="form-actions">
      <%= turbo_save_button_tag Spree.t('actions.update') %>
        <%= link_to Spree.t('actions.destroy'), destroy_url,
                    data: { turbo_method: :delete, turbo_confirm: Spree.t(:are_you_sure_delete),
                            turbo_frame: defined?(turbo_frame) ? turbo_frame : '_top' },
                    class: 'btn btn-danger ml-auto'
        %>
    </div>
  <% end %>
</div>
